/* pages/index/index.wxss */
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 0rpx 10rpx;
  height: 55vh;
}
.container swiper{
  width: 100%;
  height: 330rpx;

}
swiper{
  width: 96%;
  height: 400rpx;
  margin: 0 16rpx;
}
swiper swiper-item{
width: 100%;
}
image{
  width: 100%;
  border-radius: 25rpx;
}
.nav{
  margin: 9rpx 0rpx;
  border-radius: 0px 0px 25rpx 25rpx;
  background-color:pink;
  display: flex;
  flex-direction: row;
   flex-wrap: wrap;/*换行 */
   justify-content: space-between;/*两边对齐*/
}
 .nav .menu{
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   width:25%; 
   margin-bottom: 12rpx;
 }
 .menu image{
   width: 100rpx;
   height: 100rpx;
   border-radius: 50%;
 }
 .menu text{
   color: #666;
   margin-bottom: 20rpx;
 }
 .hot{
   display: block;
   text-align: center;
   margin: 15rpx 0;
 }

 .wrap{
   display: flex;
   flex-direction: row;
   flex-wrap: wrap;
   justify-content: space-around;
   background-color: #576b95;
 }
 .wrap .product{
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   width: 46%;
   height: 220px;
   margin: 10rpx 10rpx;
   background-color:gray;
 }
 .product image{
   border-top-left-radius: 16rpx;
   border-top-right-radius: 16rpx;
   width: 100%;
 }
 .info{
   display: flex;
   flex-direction: row;
   justify-content:space-between;
   border-bottom-left-radius: 16rpx;
   border-bottom-right-radius: 16rpx; 
 }
 .name{
   color: white;
 }
 .info .price{
   color: red;
 }